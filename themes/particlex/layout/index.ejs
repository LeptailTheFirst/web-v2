<div id="home-head">
    <div id="home-background" style="background-image: url(<%- theme.background %>)"></div>
    <% if (theme.headBlockEnable) { %>
    <div class="home-info" @click="homeclick">
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="loop"></span>
        <span class="info">
            <div class="wrap">
                <h1><%= config.title %></h1>
                <h2><%= config.subtitle %></h2>
                <h3><%= config.description %></h3>
            </div>
        </span>
    </div>
    <% } %>
</div>
<div id="home-posts-wrap" class="<%- theme.card.enable ? "" : "home-posts-wrap-no-card" %>">
    <div id="home-posts">
        <div id="posts">
            <%- partial("posts") %>
            <%- partial("current") %>
        </div>
    </div>
    <% if (theme.card.enable) { %>
    <div id="home-card">
        <%- partial("card") %>
    </div>
    <% } %>
</div>
